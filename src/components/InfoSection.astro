---
// Info section containing Mario Kart tournament, opening hours and map
import MarioKartTournament from './MarioKartTournament.astro';
import MapSection from './MapSection.astro';
---

<section class="info-section w-full py-12 sm:py-16 lg:py-20 px-4 sm:px-6 lg:px-8 bg-surface-page">
    <div class="max-w-6xl mx-auto">
        <!-- Welcome Banner -->
        <div class="mb-12 text-center">
            <div class="bg-mutedred-100 border-2 border-mutedred-400 p-6 sm:p-8 rounded-none">
                <h4 class="font-heading text-lg sm:text-xl font-bold text-text-body mb-3">
                    Velkommen i butikken!
                </h4>
                <p class="font-body text-text-body max-w-3xl mx-auto">
                    Det er ganske gratis at tage dine venner med og hænge ud i vores sofaer for at spille. 
                    Vi har øl og vand i køleskabet og holder også turneringer i f.eks. Mario Kart 64 en gang om måneden.
                </p>
            </div>
        </div>

        <!-- Responsive Grid Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
            <!-- Mario Kart Tournament - Mobile: full width, Desktop: 2/3 width -->
            <div class="lg:col-span-2 order-1 lg:order-1">
                <MarioKartTournament />
            </div>

            <!-- Right Column: Opening Hours and Map - Mobile: full width, Desktop: 1/3 width -->
            <div class="lg:col-span-1 order-2 lg:order-2 space-y-6 lg:space-y-12 lg:h-full flex flex-col">
                <!-- Opening Hours Card - Half Height -->
                <div class="bg-surface-product-card border-2 border-black-700 shadow-product-card p-4 sm:p-6 lg:p-6 rounded-none lg:flex-1">
                    <h3 class="font-heading text-lg font-bold text-text-body mb-4 lg:mb-2 flex items-center">
                        <svg class="w-5 h-5 lg:w-3 lg:h-3 mr-2 lg:mr-1 text-mutedred-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                        </svg>
                        Åbningstider
                    </h3>
                    
                    <div class="space-y-2 lg:space-y-0">
                        <div class="flex justify-between items-center py-1 lg:py-2 border-b border-border-grey lg:mb-1">
                            <span class="font-body text-text-body font-medium text-base">Mandag - Fredag</span>
                            <span class="font-body text-text-body text-base">12:00 - 17:30</span>
                        </div>
                        <div class="flex justify-between items-center py-1 lg:py-2 border-b border-border-grey lg:mb-1">
                            <span class="font-body text-text-body font-medium text-base">Lørdag</span>
                            <span class="font-body text-text-body text-base">11:00 - 16:00</span>
                        </div>
                        <div class="flex justify-between items-start py-1 lg:py-2">
                            <span class="font-body text-text-body font-medium text-base">Søndag</span>
                            <div class="text-right">
                                <div class="font-body text-text-body text-base">Første søndag hver måned</div>
                                <div class="font-body text-text-body font-medium text-base">12:00 - 15:00</div>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Info -->
                    <div class="mt-4 lg:mt-2 pt-3 lg:pt-1 border-t border-border-grey">
                        <div class="flex items-center justify-center">
                            <svg class="w-3 h-3 mr-1 text-mutedred-400" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                            </svg>
                            <span class="font-body text-text-body text-base">60571282</span>
                        </div>
                    </div>
                </div>

                <!-- Map Section - Half Height -->
                <div class="lg:flex-1">
                    <MapSection />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* When CatMenu is visible on desktop, adjust width to fit remaining viewport */
    .info-section.lg\:ml-64 {
        width: calc(100vw - 16rem);
    }
</style>
